//Animaciones
@keyframes cloud-right {
  from {
    transform: translate(10%,0);
  }
  to {
    transform: translate(-100em,0);
  }
}
@keyframes cloud-left {
  from {
    
    transform: translate(-10%,0);
  }
  to {
    transform: translate(100em,0);
  }
}
.cloud
    position: absolute
.cl1
    top 5em
    animation:cloud-right 40s infinite alternate;
    animation-delay: -10s;
    right: 0
.cl2
    top 15em
    animation:cloud-left 25s infinite alternate;
    left: 0
    animation-delay: -3s;
.cl3
    top 18em
    animation:cloud-right 35s infinite alternate;
    right: 0
    
.cl4
    top 25em
    animation:cloud-left 25s infinite alternate; 
    left: 0

